ENV_DIR=$3

mkdir -p ~/.ssh/
chmod 700 ~/.ssh/

cp $ENV_DIR/$SSH_KEY ~/.ssh/id_rsa
chmod 400 ~/.ssh/id_rsa

echo 'StrictHostKeyChecking=no' > ~/.ssh/config
chmod 600 ~/.ssh/config

mkdir -p "$1/.profile.d"
cat > "$1/.profile.d/00-clobber-ssh-key.sh" << EOF
echo 'unsetting ssh deploy key'
unset -v SSH_KEY
EOF
